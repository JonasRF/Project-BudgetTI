@model IEnumerable<BudgetIT.Models.NotaFiscalProduto> 

@{
    ViewData["Title"] = "SimpleSearch";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class=" table table-bordered table-striped">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Fornecedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vencimento)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fornecedor.NomeFantasia)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vencimento)
                    </td>

                </tr>
                }
            </tbody>

        </table>
    </div>

</div>