@model BudgetIT.Models.viewModels.ServicoViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Services</h4>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
           <div class="form-group">
            <label asp-for="Servico.Descricao" class="control-label"></label>
            <input asp-for="Servico.Descricao" class="form-control" />
               </div>
            <div class="form-group">
                <label asp-for="Servico.Tipo" class="control-label"></label>
                <input asp-for="Servico.Tipo" class="form-control" />
            </div>
            <div>
                <label asp-for="Servico.FornecedorId" class="control-label"></label>
                <select asp-for="Servico.FornecedorId" asp-items="@(new SelectList(Model.Fornecedor,"Id", "RazaoSocial"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to list</a>
            </div>
</form>
    </div>
</div>

